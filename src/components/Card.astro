---
interface Props {
	title: string;
	body: string;
	href: string;
	tags: string;

}

const { title, body, href, tags } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
		</h2>
		<p>
			{body}
			<br>
		</p>
		<dl class="mt-6 flex gap-4 sm:gap-6">
			<div class="flex flex-col-reverse">
			  <dt class="text-sm font-medium text-gray-600">Tags</dt>
			  <dd class="text-xs text-gray-500">{tags}</dd>
			</div>
		  </dl>
		<span class="vermas" >&rarr;</span>
	</a>
</li>
<style>
	:root {
		--custom-gradient: linear-gradient(to right, #000, #F7CA02, #000, #F7CA02);

	}
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
		position: relative;
	}
	h2 {
		font-weight: bold;
		color: #F7CA02;
		margin: 0;
		font-size: 1.40rem;
		letter-spacing: 3px;
    	word-spacing: 3px;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		font-size: 1rem;
	}
	span.vermas {
		text-align: right;
		position: absolute;
		right: 0;
		bottom: 0;
		color: #F7CA02;
		padding: 5px 5px;
	}
	span.vermas:hover{
		padding: 5px 15px;
		font-size: 25px;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--custom-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: #F7CA02;
	}
	
</style>
